<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- 继承 Spring Boot Parent -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.6</version>
        <relativePath/>
    </parent>


    <!-- 基本信息 -->
    <groupId>com.qoobot</groupId>
    <artifactId>qooerp</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>qooerp</name>
    <description>qooerp</description>
    <url>https://github.com/qoobot-com/qooerp</url>

    <!-- 模块声明 -->
    <modules>
        <!-- 公共模块 -->
        <module>qooerp-common</module>

        <!-- P0 核心基础服务 -->
        <module>qooerp-gateway/qooerp-gateway-service</module>
        <module>qooerp-gateway/qooerp-gateway-start</module>
        <module>qooerp-auth/qooerp-auth-service</module>
        <module>qooerp-auth/qooerp-auth-start</module>
        <module>qooerp-system/qooerp-system-service</module>
        <module>qooerp-system/qooerp-system-start</module>
        <module>qooerp-organization/qooerp-organization-service</module>
        <module>qooerp-organization/qooerp-organization-start</module>
        <module>qooerp-user/qooerp-user-service</module>
        <module>qooerp-user/qooerp-user-start</module>
        <module>qooerp-permission/qooerp-permission-service</module>
        <module>qooerp-permission/qooerp-permission-start</module>

        <!-- P1 核心业务服务 -->
        <module>qooerp-hr/qooerp-hr-service</module>
