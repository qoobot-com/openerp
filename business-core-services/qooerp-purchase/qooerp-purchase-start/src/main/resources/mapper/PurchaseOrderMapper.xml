<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qoobot.qooerp.purchase.mapper.PurchaseOrderMapper">

    <select id="queryPage" resultType="com.qoobot.qooerp.purchase.entity.PurchaseOrder">
        SELECT * FROM purchase_order
        <where>
            deleted = 0
            <if test="orderCode != null and orderCode != ''">
                AND order_code LIKE CONCAT('%', #{orderCode}, '%')
            </if>
            <if test="supplierId != null">
                AND supplier_id = #{supplierId}
            </if>
            <if test="orderStatus != null and orderStatus != ''">
                AND order_status = #{orderStatus}
            </if>
            <if test="startDate != null">
                AND order_date &gt;= #{startDate}
            </if>
            <if test="endDate != null">
                AND order_date &lt;= #{endDate}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

</mapper>
