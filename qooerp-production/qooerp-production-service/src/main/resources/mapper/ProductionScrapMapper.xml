<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qoobot.qooerp.production.mapper.ProductionScrapMapper">

    <select id="selectPageByCondition" resultType="com.qoobot.qooerp.production.entity.ProductionScrap">
        SELECT * FROM production_scrap
        WHERE deleted = 0 AND tenant_id = #{tenantId}
        <if test="scrapNo != null and scrapNo != ''">
            AND scrap_no LIKE CONCAT('%', #{scrapNo}, '%')
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY created_time DESC
    </select>

</mapper>
